<openerp>
	<data>
		<record model="ir.ui.view" id="view_move_search_inherit">
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_search"/>
            <field name="arch" type="xml">
            	<xpath expr="/search[@string='Stock Moves']/field[@name='prodlot_id']" position="after">
            		<field name="categ_id"/>
            		<field name="partner_id"/>
	            </xpath>	  
                <xpath expr="/search[@string='Stock Moves']/group[@string='Group By...']/filter[@string='Destination']" position="after">
	            	<filter string="Empresa" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
	            	<filter string="Categoria Producto" icon="terp-personal" domain="[]" context="{'group_by':'categ_id'}"/>
	            </xpath>               
            </field>
        </record>
        
        <!-- Adding Sales Order Reference to outgoing picking -->

        <record id="stock_picking_out_inherit_nueru" model="ir.ui.view">
            <field name="name">Outgoing picking Inherited</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_tree"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="client_order_ref"/>
                </field>
            </field>
        </record>
        
	</data>
</openerp>